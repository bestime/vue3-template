# http://editorconfig.org
# 告诉EditorConfig插件，这是根文件，不用继续往上查找
root = true

# 设置字符集
charset = utf-8
indent_style = space

# 缩进的空格数
indent_size = 2

# 结尾换行符，可选"lf"、"cr"、"crlf"
end_of_line = lf

# 在文件结尾插入新行
insert_final_newline = false

# 删除一行中的前后空格
trim_trailing_whitespace = false

# 对所有的 js 文件生效
[*.{js,ts,tsx,vue}]
# 字符串使用单引号
quote_type = single